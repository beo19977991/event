
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/whrite"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
android:layout_marginBottom="20dp">

<LinearLayout
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cach_kieu_lap_trinh_su_kien"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:textAlignment="center"
            android:id="@+id/t1"
            android:layout_width="@dimen/sizetxt"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0.3"
            android:text="@string/so_a"
            android:textSize="18sp" />

        <EditText
            android:textAlignment="center"
            android:inputType="number"
            android:id="@+id/edt_NumberA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"

        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:id="@+id/t2"
            android:layout_width="@dimen/sizetxt"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0.3"
            android:text="@string/so_b"
            android:textSize="18sp" />
        <EditText
            android:textAlignment="center"
            android:inputType="number"
            android:id="@+id/edt_NumberB"
            android:layout_weight="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>


    <TextView
        android:textColor="@color/whrite"
        android:background="@color/green"
        android:textAlignment="center"
        android:id="@+id/text_kq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_Result"
        android:text="@string/tong_2_so"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    </RelativeLayout>